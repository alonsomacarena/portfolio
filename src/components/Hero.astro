---
interface Props {
	title: string;
	tagline?: string;
	align?: 'start' | 'center';
	class?: string;
	taglineClass?: string
}

const { align = 'center', tagline, title, taglineClass } = Astro.props;
---

<div class:list={['hero stack gap-4', align, Astro.props.class]}>
	<div class="stack gap-2">
		<h1 class="title">{title}</h1>
		{tagline && <p class:list={['tagline', taglineClass]}>{tagline}</p>}
	</div>
	<slot />
</div>

<style>
	.hero {
		font-size: var(--text-lg);
		text-align: center;
	}
	.hero-row{
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: space-between;
		margin-top: 20px;
	}

	.title,
	.tagline {
		max-width: 37ch;
		margin-inline: auto;
		font-size: var(--text-md);
	}
	.tagline_about{
		max-width: 100%;
		padding-inline: 1rem;
	}

	.title {
		font-size: var(--text-3xl);
		color: var(--gray-0);
	}

	@media (min-width: 50em) {
		.hero {
			font-size: var(--text-xl);
		}

		.start {
			text-align: start;
		}

		.start .title,
		.start .tagline {
			margin-inline: unset;
		}

		.title {
			font-size: var(--text-5xl);
		}
		.hero-row{
			flex-direction: row;
		}
		.tagline{
			font-size: var(--text-2lg);
		}
		.tagline_about{
			max-width: 80%;
			padding-inline: 2.5rem;
		}
	}
</style>
